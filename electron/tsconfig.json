{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "../dist-electron",
    "rootDir": ".",
    "strict": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["electron", "node"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
} 